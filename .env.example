# HeatTrax Tapo M400 Scheduler - Environment Variables Example
#
# Copy this file to .env and fill in your values
# IMPORTANT: Add .env to .gitignore to prevent committing secrets!

# System Settings
TZ=America/New_York

# Location Settings (Required)
LATITUDE=40.7128
LONGITUDE=-74.0060
TIMEZONE=America/New_York

# Tapo Device Settings (Required - KEEP THESE SECRET!)
TAPO_IP_ADDRESS=192.168.1.100
TAPO_USERNAME=your_tapo_username
TAPO_PASSWORD=your_tapo_password

# Weather Thresholds
THRESHOLD_TEMP_F=34
LEAD_TIME_MINUTES=60
TRAILING_TIME_MINUTES=60

# Scheduler Settings
CHECK_INTERVAL_MINUTES=10
FORECAST_HOURS=12

# Safety Settings
MAX_RUNTIME_HOURS=6
COOLDOWN_MINUTES=30

# Morning Mode Settings
MORNING_MODE_ENABLED=true
MORNING_MODE_START_HOUR=6
MORNING_MODE_END_HOUR=8

# Logging
LOG_LEVEL=INFO

# Optional: Custom config file path
# CONFIG_PATH=/custom/path/to/config.yaml
